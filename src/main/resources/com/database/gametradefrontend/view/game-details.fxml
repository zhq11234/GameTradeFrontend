<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<AnchorPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.database.gametradefrontend.controller.GameDetailsController">
   
   <stylesheets>
      <URL value="@styles/vendormain.css" />
   </stylesheets>

   <!-- 主容器 -->
   <VBox alignment="TOP_CENTER" spacing="0" 
         AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" 
         AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      
      <!-- 顶部导航栏 -->
      <HBox alignment="CENTER" spacing="20" styleClass="top-navbar"
            style="-fx-background-color: rgba(255,255,255,0.95); -fx-padding: 15 30;">
         
         <!-- 页面标题 -->
         <HBox alignment="CENTER" spacing="15" HBox.hgrow="ALWAYS">
            <Label fx:id="pageTitleLabel" text="游戏详情" styleClass="section-title" style="-fx-font-size: 24px;"/>
         </HBox>
         
         <!-- 返回按钮 -->
         <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBackToMain"
                 styleClass="cancel-button" style="-fx-min-width: 80px;">
            <text>返回</text>
         </Button>
      </HBox>

      <!-- 主内容区域 -->
      <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS"
                  style="-fx-background-color: rgba(255,255,255,0.8);">
         <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 30;">
            
            <!-- 游戏详情表单 -->
            <VBox alignment="TOP_CENTER" spacing="15" 
                  style="-fx-padding: 20; -fx-background-color: rgba(255,255,255,0.9); -fx-border-radius: 8; -fx-background-radius: 8;">
               
               <GridPane hgap="15" vgap="15" alignment="CENTER">
                  <columnConstraints>
                     <ColumnConstraints halignment="RIGHT" minWidth="120"/>
                     <ColumnConstraints halignment="LEFT" minWidth="350"/>
                  </columnConstraints>
                  
                  <!-- 不可编辑字段 -->
                  <Label text="游戏名称：" styleClass="form-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                  <Label fx:id="gameNameLabel" styleClass="form-value" GridPane.rowIndex="0" GridPane.columnIndex="1"
                         style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                  
                  <Label text="企业名称：" styleClass="form-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                  <Label fx:id="companyNameLabel" styleClass="form-value" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                  
                  <Label text="上线时间：" styleClass="form-label" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                  <Label fx:id="releaseTimeLabel" styleClass="form-value" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                  
                  <Label text="状态：" styleClass="form-label" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                  <Label fx:id="statusLabel" styleClass="form-value" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                  
                  <!-- 可编辑字段 -->
                  <Label text="游戏类别：" styleClass="form-label" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                  <TextField fx:id="categoryField" styleClass="form-input" GridPane.rowIndex="4" GridPane.columnIndex="1"
                            promptText="请输入游戏类别"/>
                  
                  <Label text="价格：" styleClass="form-label" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                  <TextField fx:id="priceField" styleClass="form-input" GridPane.rowIndex="5" GridPane.columnIndex="1"
                            promptText="请输入价格"/>
                  
                  <Label text="游戏简介：" styleClass="form-label" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                  <TextArea fx:id="descriptionField" styleClass="form-input" GridPane.rowIndex="6" GridPane.columnIndex="1"
                            prefRowCount="4" wrapText="true" promptText="请输入游戏简介"/>
                  
                  <Label text="下载链接：" styleClass="form-label" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                  <TextField fx:id="downloadLinkField" styleClass="form-input" GridPane.rowIndex="7" GridPane.columnIndex="1"
                            promptText="请输入游戏下载链接"/>
                  
                  <Label text="版号：" styleClass="form-label" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
                  <TextField fx:id="licenseNumberField" styleClass="form-input" GridPane.rowIndex="8" GridPane.columnIndex="1"
                            promptText="请输入游戏版号"/>
                  
                  <!-- 操作按钮 -->
                  <HBox alignment="CENTER" spacing="15" GridPane.rowIndex="9" GridPane.columnIndex="0" GridPane.columnSpan="2">
                     <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSaveGameDetails"
                             styleClass="save-button" style="-fx-min-width: 100px;">
                        <text>保存修改</text>
                     </Button>
                     <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleBackToMain"
                             styleClass="cancel-button" style="-fx-min-width: 100px;">
                        <text>取消</text>
                     </Button>
                  </HBox>
               </GridPane>
            </VBox>
            
            <!-- 提示信息 -->
            <VBox alignment="CENTER" spacing="10">
               <Label text="温馨提示：" styleClass="form-label" style="-fx-font-weight: bold;"/>
               <Label text="• 游戏名称、企业名称、上线时间、状态为不可修改字段" styleClass="form-label" style="-fx-font-size: 12px;"/>
               <Label text="• 修改后请点击保存修改按钮保存更改" styleClass="form-label" style="-fx-font-size: 12px;"/>
               <Label text="• 下载链接必须是有效的URL地址" styleClass="form-label" style="-fx-font-size: 12px;"/>
            </VBox>
            
         </VBox>
      </ScrollPane>
   </VBox>
</AnchorPane>
