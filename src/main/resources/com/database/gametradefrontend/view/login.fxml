<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.database.gametradefrontend.controller.LoginController"
      spacing="20" alignment="CENTER"
      style="-fx-background-color: #f5f5f5;"
      prefWidth="400" prefHeight="300">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <Label text="GameTrade 登录"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints prefWidth="80"/>
            <ColumnConstraints prefWidth="200"/>
        </columnConstraints>

        <Label text="用户名:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="密码:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="20" alignment="CENTER">
        <Button fx:id="loginButton" text="登录"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 8 20;"/>
        <Button fx:id="registerButton" text="注册"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 8 20;"/>
    </HBox>

    <ProgressIndicator fx:id="progressIndicator" visible="false" />

    <Label fx:id="statusLabel" text="请输入用户名和密码"
           style="-fx-text-fill: #7f8c8d;"/>

</VBox>