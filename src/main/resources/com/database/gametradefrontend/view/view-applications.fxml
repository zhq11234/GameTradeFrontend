<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>

<?import javafx.scene.layout.Region?>
<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.database.gametradefrontend.controller.ViewApplicationsController">
   <stylesheets>
      <URL value="@styles/vendormain.css" />
   </stylesheets>
   <children>
      <!-- 顶部导航栏 -->
      <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="1200.0" style="-fx-background-color: #667eea;">
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBackToMain" text="返回主页面" textFill="WHITE" styleClass="back-button">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Button>
            <Label text="上架申请信息" textFill="WHITE" style="-fx-font-weight: bold;">
               <font>
                  <Font size="24.0" />
               </font>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
      
      <!-- 工具栏 -->
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="1200.0" style="-fx-background-color: #f7fafc; -fx-border-color: #e2e8f0; -fx-border-width: 0 0 1 0;">
         <children>
            <!-- 左侧占位符，使右侧内容靠右对齐 -->
            <Region HBox.hgrow="ALWAYS" />
            
            <!-- 筛选器放在右上角 -->
            <HBox alignment="CENTER_RIGHT" spacing="10">
               <Label text="排序方式:" style="-fx-font-weight: bold;" />
               <ComboBox fx:id="sortComboBox" prefWidth="150.0" styleClass="sort-combo-box" />
               <Button mnemonicParsing="false" onAction="#handleRefresh" text="刷新数据" styleClass="refresh-button" />
               
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </HBox>
         </children>
      </HBox>
      
      <!-- 主要内容区域 -->
      <VBox prefHeight="690.0" prefWidth="1200.0" style="-fx-background-color: #f7fafc;">
         <children>
            <!-- 加载状态标签 -->
            <Label fx:id="loadingLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="50.0" prefWidth="1200.0" text="正在加载上架申请数据..." textAlignment="CENTER" visible="false" style="-fx-font-size: 16px; -fx-text-fill: #4a5568;">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
            
            <!-- 无数据提示标签 -->
            <Label fx:id="noDataLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="50.0" prefWidth="1200.0" text="暂无上架申请数据" textAlignment="CENTER" visible="false" style="-fx-font-size: 16px; -fx-text-fill: #4a5568;">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
            
            <!-- 申请卡片容器 -->
            <FlowPane fx:id="applicationsContainer" hgap="20.0" vgap="20.0" prefHeight="640.0" prefWidth="1200.0" style="-fx-padding: 20;">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </FlowPane>
         </children>
      </VBox>
   </children>
</VBox>
